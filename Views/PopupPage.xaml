<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             x:Class="SudokuApp.PopupPage"
             HeightRequest="150" WidthRequest="250"
             >
    <VerticalStackLayout>
        <StackLayout x:Name="stackLayout" VerticalOptions="Center" HorizontalOptions="Center"
             WidthRequest="250" HeightRequest="150" >
            <ActivityIndicator x:Name="activityIndycator" IsRunning="True" VerticalOptions="CenterAndExpand"/>
            <Label x:Name="LabelText" Text="trwa ładowanie danych, proszę czekać..."  VerticalOptions="CenterAndExpand"
           HorizontalTextAlignment="Center"/>
        </StackLayout>
    </VerticalStackLayout>
</mopups:PopupPage>